{
  "name": "open-godfather",
  "version": "1.0.0",
  "description": "Node.js framework for building SA-MP and open.mp scripts with the samp-node plugin.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,mjs,json}'"
  },
  "keywords": [
    "samp",
    "samp-node",
    "open.mp",
    "open.mp node",
    "omp-node",
    "omp",
    "open multiplayer"
  ],
  "author": "vladgitx",
  "license": "ISC",
  "devDependencies": {
    "@sa-mp/node": "^0.2.0",
    "@types/node": "^20.5.7",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "semi": false,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 140
  }
}
