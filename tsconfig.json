{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "Node16",
        "target": "es2021",
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "./build/types",
        "outDir": "./build",
        "noEmit": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node16",
        "types": ["@sa-mp/node", "@types/node"],
        "paths": {
            "@/*": ["./src/*"],
        },
    },
}
