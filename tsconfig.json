{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "ESNext",
    "target": "es2021",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./build/types",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["@sa-mp/node", "@types/node"]
  }
}